

<!DOCTYPE html>
<html lang="en">
   <head>
      <title>Guilds | <%= app_name %></title>
      <link rel="stylesheet" href="/style.css">
      <%- include("/app/public/ressources/require.ejs") %>
   </head>
   <body>
      <%- include("/app/public/ressources/navbar.ejs") %>
      <br>
      <h1 class="title is-2 is-black columns is-mobile is-centered">
         Guilds
      </h1>
      <br>
      <h1 class="title is-2 is-black columns is-mobile is-centered">
         <% if(guilds.length === 0) { %>
         <center>
            <h2 style="color:black">You are admin on any guild. 🙁</h2>
         </center>
         <% } for(var i=0; i<guilds.length; i++) { if(guilds[i]) { %>
         <a href="guilds/<%= guilds[i].id %>">
            <div class="hvrbox">
               <img src="<% if(guilds[i].icon){ %>https://cdn.discordapp.com/icons/<%= guilds[i].id %>/<%= guilds[i].icon %>.png<% } else { %>https://cdn.glitch.com/d4749c9d-7c2a-4abf-8cfc-bb263c4010af%2Fdiscord.png?v=1584292406264<% } %>">
               <div class="hvrbox-layer_top">
                  <div class="hvrbox-text"><%= guilds[i].name %></div>
               </div>
            </div>
         </a>
         <% }} %>
      </h1>
   </body>
</html>